#include <iostream>
using namespace std;

int main() {
    int rows;
    cout << "Enter number of rows for Upper Triangle: ";
    cin >> rows;

    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < i; j++) {
            cout << "  "; // spaces for indentation
        }
        for (int k = 0; k < rows - i; k++) {
            cout << "* ";
        }
        cout << endl;
    }

    return 0;
}
