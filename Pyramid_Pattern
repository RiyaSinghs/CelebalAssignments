#include <iostream>
using namespace std;

int main() {
    int rows;
    cout << "Enter number of rows for Pyramid: ";
    cin >> rows;

    for (int i = 1; i <= rows; i++) {
        // print spaces
        for (int j = 1; j <= rows - i; j++) {
            cout << "  ";
        }
        // print stars
        for (int k = 1; k <= i; k++) {
            cout << "* ";
        }
        cout << endl;
    }

    return 0;
}
